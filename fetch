#!/usr/bin/env bash
# Fetch info about your system
#
# Created by Dylan Araps
# https://github.com/dylanaraps/dotfiles/
# Modified by Ethan Chan
# https://github.com/metakirby5/dotfiles/

# File to source
# Can contain:
#   export PRIMARY_N=1-5
#   export SECONDARY_N=1-5
fetch_vars=~/.fetch_vars

# Text
title="$(whoami)"
underline="$(printf "%${#title}s" | tr ' ' '=')="
declare -A info=(
  ["OS"]="Fedora"
  ["Shell"]="Bash"
  ["Window Manager"]="i3"
  ["Font"]="PixelMPlus12"
  ["Waifu"]="Black Rock Shooter"
)

# Image
imgtempdir=~/.fetch
charheight=31
charwidth=$(($charheight / 2))

# Comment out the line below for a custom image
#imgsrc=/path/to/img

# === DO NOT EDIT BELOW THIS LINE ===

[ -f "$fetch_vars" ] && source "$fetch_vars"

# Colors
primary_n="${PRIMARY_N:=1}"
secondary_n="${SECONDARY_N:=4}"
primary="$(tput setaf $primary_n)"
secondary="$(tput setaf $secondary_n)"
black="$(tput setaf 0)"
bold="$(tput bold)"
clear="$(tput sgr0)"

put_color_header() {
    local text
    for i in `seq 0 7`; do
        case "$i" in
            "$primary_n")     text=' .. ' ;;
            "$secondary_n")   text=' __ ' ;;
            *)                text='    ' ;;
        esac

        echo -n "$(tput setaf $i)$bold$text$clear "
    done
}

put_colors() {
    for i in `seq $1 $2`; do
        echo -n "$(tput setab $i)    $clear "
    done
}

# Calculate size of image from amount of info present
# title + underline + 3 lines of color info = 5
isize="$(((${#info[@]} + 5) * $charheight))"

# Calculate amount of padding, add 2 for padding
pad="$(printf "%$(($isize / $charwidth + 2))s")"

# If no image provided, image source is wallpaper
[ -z "$imgsrc" ] && imgsrc="$(cat ~/.fehbg | cut -d\' -f2)"

img="$imgtempdir/$(basename $imgsrc)"

# Crop if necessary
if [ ! -f "$img" ]; then
    [ ! -d "$imgtempdir" ] && (mkdir "$imgtempdir" || exit)
    wsize="$(identify -format '%h' $imgsrc)"
    convert "$imgsrc" -crop "$wsize"x"$wsize"+0+0 -gravity center "$img"
fi

# Print info
clear
tput civis
echo "$pad$bold${primary}$title${clear}"
echo "$pad$bold${black}$underline"
for i in "${!info[@]}"; do
    echo "$pad$bold${secondary}$i${clear}: ${info[$i]}"
done
echo "$pad$(put_color_header)"
echo "$pad$(put_colors 0 7)"
echo "$pad$(put_colors 8 15)"
echo -e "0;1;$xoffset;$yoffset;$isize;$isize;;;;;$img\n4;\n3;" | /usr/lib/w3m/w3mimgdisplay
tput cnorm

