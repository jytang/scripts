#!/bin/bash

if [[ $# < 3 ]]; then
	echo
	echo "tester's all test cases found in provided files."
	echo "Usage: multitest [local prog] [solution prog] [test case files]"
	echo
	exit 1
fi

loc=$1
shift
soln=$1
shift

while [[ $# > 0 ]]; do
	if [[ -f $1 ]]; then
		while read line; do
			if [[ `echo $line | grep -v ^//` ]]; then
				testernovim $loc $soln $line
			fi
		done < $1
	else
		echo
		echo "File $1 not found!"
	fi
	shift
done

echo
