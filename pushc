#!/usr/bin/env bash

# pushc
# Author: Ethan Chan
# Date: 5/5/14
#
# A script to push my git-maintained configs.

# Pushes the directory provided as arg 1.
push_dir() {
	if [[ -d $1 ]]; then
		if [[ -d $1/.git ]]; then
			cd $1
		else
			echo "ERROR: $1 is not a git repository"
			echo
			errors="$errors $1"
			return
		fi
	else
		echo "ERROR: $1 is not a directory"
		echo
		errors="$errors $1"
		return
	fi

	echo "===Pushing $1..."
	if [[ $(git diff) ]] || [[ $(git log origin/master..HEAD) ]]; then
		git status
		echo
		if [[ $(git diff) ]]; then
			echo "Please enter commit message."
			read cmsg
			if [[ $cmsg ]]; then
				echo
				git commit -a -m "$cmsg"
			else
				echo "ERROR: No commit message entered."
				echo
				errors="$errors $1"
				return
			fi
		fi
		git push
	else
		echo "No updates to be made in $1."
	fi
	echo
}

echo

IFS=':' read -ra PATHS <<< "$GIT_UPDATE_PATHS"
for path in ${PATHS[@]}; do
	push_dir "$path"
done

if [[ $errors ]]; then
	echo "!!! FAILED TO PUSH:$errors"
	echo
fi
